<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farhaan.farhaanweather.MainActivity"
    android:background="@color/colorBlack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_summary"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:text="WeatherSummary"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/weather_details"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:text="WeatherTemp"
        android:textSize="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:id="@+id/today_date"
            android:textColor="@color/colorWhite"
            android:text="todayDate"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/today_high"
            android:textColor="@color/colorWhite"
            android:text="todayHigh"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/today_low"
            android:textColor="@color/colorWhite"
            android:text="todayLow"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/forecast_data"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_list"
        android:layout_marginTop="10dp"></ListView>
</LinearLayout>
